<%= form_with(model: @article, local: true) do |form| %>

<%= render 'shared/errors', obj: @article %>

  <div class="form-group row">
    <%= form.label :title,class:"col-2 col-form-label" %>    
    <div class="col-10">
      <%= form.text_field :title,id:"title",class:"form-control" %>
    </div>
  </div>


  <div class="form-group row">
    <%= form.label :description,class:"col-2 col-form-label" %>
    <div class="col-10">
    <%= form.text_area :description,id:"description",rows:10,class:"form-control" %>
  </div>
  </div>

  
  <div class="form-group row justify-content-center">
    <%= form.submit class:"btn btn-primary btn-lg"%>
  </div>
<% end %>

<%= link_to '[ Cancle and Return ]', articles_path %>