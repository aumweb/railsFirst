<%= form_with(model: @user, local: true) do |form| %>

<%= render 'shared/errors', obj: @user %>

  <div class="form-group row">
    <%= form.label :username,class:"col-2 col-form-label" %>    
    <div class="col-10">
      <%= form.text_field :username,id:"username",class:"form-control" %>
    </div>
  </div>


  <div class="form-group row">
    <%= form.label :email,class:"col-2 col-form-label" %>
    <div class="col-10">
    <%= form.email_field :email,id:"email",class:"form-control" %>
  </div>
  </div>

    <div class="form-group row">
    <%= form.label :password,class:"col-2 col-form-label" %>
    <div class="col-10">
    <%= form.password_field :password,id:"password",class:"form-control",placeholder:"Enter Password" %>
  </div>
  </div>

  
  <div class="form-group row justify-content-center">
    <%= form.submit(@user.new_record? ? "Sign up": "Update", class:"btn btn-primary btn-lg")%>
  </div>
<% end %>

<%= link_to '[ Cancle and Return ]', users_path %>